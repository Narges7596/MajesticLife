<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.farazannajmi.majesticlife">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AppManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_king"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AccountPackage.AccountManagementActivity" />
        <activity android:name=".SkillPackage.SkillsActivity" />
        <activity android:name=".PlanPackage.PlanActivity" />
        <activity android:name=".QuestPackage.QuestsActivity" />
        <activity android:name=".ShopActivity" />
        <activity android:name=".FaaliatPackage.FaaliatsActivity" />
        <activity android:name=".FaaliatPackage.EditFaaliatActivity" />
        <activity android:name=".SkillPackage.EditSkillActivity" />
        <activity android:name=".AccountPackage.AvatarShopActivity"></activity>
    </application>

</manifest>
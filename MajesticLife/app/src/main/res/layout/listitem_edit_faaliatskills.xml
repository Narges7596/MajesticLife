<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/listItem_editfaaliatskill_avatar_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/listItem_editfaaliatskill_x_txt"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/listItem_editfaaliatskill_x_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="X"
        android:layout_toLeftOf="@+id/listItem_editfaaliatskill_times_numberPicker"
        android:layout_centerInParent="true"/>

    <NumberPicker
        android:id="@+id/listItem_editfaaliatskill_times_numberPicker"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_toLeftOf="@+id/listItem_editfaaliatskill_remove_btn"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/listItem_editfaaliatskill_remove_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/listItem_skill_avatar_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_skills"
            android:layout_centerInParent="true"/>

        <ProgressBar
            android:id="@+id/listItem_skill_progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circular"
            android:rotation="90"/>

        <TextView
            android:id="@+id/listItem_skill_level_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/listItem_skill_progressBar"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_circlefill"
            android:gravity="center"
            android:text="10"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/listItem_skill_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Knowledge"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/listItem_skill_edit_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/ic_edit_pen"
            tools:ignore="VectorDrawableCompat" />

        <!--<Button-->
            <!--android:id="@+id/listItem_skill_graph_btn"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:drawableTop="@drawable/ic_graph"-->
            <!--android:visibility="visible"-->
            <!--tools:ignore="VectorDrawableCompat" />-->

        <Button
            android:id="@+id/listItem_skill_delete_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/listItem_faaliat_layoutparent">

    <LinearLayout
        android:id="@+id/list_item_linear0"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/listItem_faaliat_avatar_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_quests"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/listItem_faaliat_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toRightOf="@id/list_item_linear0"
        android:layout_toLeftOf="@+id/list_item_linear2"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/listItem_faaliat_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Reading books"
            android:textColor="@android:color/black"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listItem_faaliat_xp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/xp" />

            <TextView
                android:id="@+id/listItem_faaliat_hp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/hp" />

            <TextView
                android:id="@+id/listItem_faaliat_sp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/listItem_faaliat_skills_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="+10 Skill"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/listItem_faaliat_pluse_btn"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/listItem_faaliat_edit_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/ic_edit_pen"
            tools:ignore="VectorDrawableCompat"/>

        <Button
            android:id="@+id/listItem_faaliat_graph_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/ic_graph"
            tools:ignore="VectorDrawableCompat"/>
    </LinearLayout>

    <Button
        android:id="@+id/listItem_faaliat_pluse_btn"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:text="+"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
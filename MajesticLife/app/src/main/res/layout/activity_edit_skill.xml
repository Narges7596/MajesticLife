<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farazannajmi.majesticlife.SkillPackage.EditSkillActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/EditSkill_avatar_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="UiElementsOnClick"
                app:srcCompat="@drawable/ic_skills"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/name_colon"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditSkill_name_editText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="new skill"
                android:inputType="text"
                android:hint="name"
                android:textColorHint="@color/lightgray"
                android:focusedByDefault="false"
                android:paddingRight="5dp"/>

            <!--<Button-->
                <!--android:id="@+id/EditSkill_color_btn"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:background="#2b9ddb"-->
                <!--android:padding="5dp"-->
                <!--android:onClick="UiElementsOnClick"/>-->
        </LinearLayout>

        <Button
            android:id="@+id/EditSkill_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:onClick="UiElementsOnClick"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
